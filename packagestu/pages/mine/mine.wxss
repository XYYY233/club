/* pages/student/mine/mine.wxss */
.title{
    display: flex;
    padding: 10rpx 30rpx;
    align-items: center;
    justify-content: space-between;
}
.title image{
    width: 45rpx;
    height: 45rpx;
}
.title text{
    font-size: 32rpx;
    color: #333333;
    margin: 0 10rpx ;
}
.result{
    padding-bottom: 120rpx;
}
.resultItem{
    width: 85%;
    box-shadow:1px 1px 5px 1px rgba(159,188,217,0.22);
    margin: 30rpx auto;
    border-radius: 15rpx;
    padding: 20rpx;
}
.titleContainer{
    display: flex;
    align-items: center;
}
.clubName{
    margin-left: 20rpx;
    width: 100%;
}

.name{
    font-size: 30rpx;
}
.department{
    font-size: 28rpx;
    display: flex;
    justify-content: space-between;
}
.logout{
    color: #FA5151;
    border: #FA5151 1rpx solid;
    padding: 5rpx 10rpx;
    border-radius: 5px;
    margin-left: 30rpx;
    font-size: 26rpx;
}
.step view{
    color: #333333;
}
.step{
    width: 90%;
    margin: 0 auto;
}
.resultBt{
    padding: 15rpx 15rpx;
    text-align: center;
    width: 30%;
    border-radius: 50rpx;
    background-color: #ffffff;
    color: #333333;
    border: 1rpx solid #333333;
    font-size: 30rpx;
    margin: 20rpx auto;
    z-index: 2;
}
.cancel{
    color: #cccccc;
}
/* 选择社团 */
.chooseContainer{
    padding-bottom: 120rpx;
}
.tips{
    width: 90%;
    margin: 20rpx auto;
}
.tips>view{
    font-size: 30rpx;
    color: #cccccc;
}
.tips text{
    color: #333333;
}
.chooseItem{
    width: 85%;
    padding: 20rpx;
    box-shadow:1px 1px 5px 1px rgba(159,188,217,0.22);
    margin: 20rpx auto;

}
.radio{
    color: #333333;
    font-size: 30rpx;
    margin: 5rpx 30rpx;
}
.radios{
    display: flex;
    justify-content: space-around;
    margin: 30rpx 0;
}
/* 暂无数据 */
.nodataContainer{
    width: 100%;
    margin-top: 140rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.nodataContainer image{
    width: 85%;
}
.nodatatip{
    color: #cccccc;
    font-size: 34rpx;
    margin: 20rpx 0;
}