/* pages/forget/forget.wxss */
.container{
    margin: 170rpx auto;
    width: 85%;
}
.title{
    font-size: 44rpx;
    color: #333333;
    margin-bottom: 70rpx;
}
.pickerContainer,.inputContainer{
    width: 100%;
    border-bottom: 1rpx solid #cccccc;
    margin: 50rpx auto;
    padding: 20rpx 0rpx;
}
.inputContainer{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.inputContainer>input{
    width: 100%;
    line-height: 50rpx;
    height: 50rpx;
    z-index: 1;
}
.imgbox{
    width:7%;
    position: relative;
    
    display: flex;
    align-items: center;
}
.imgbox>image{
    position: absolute;
    right: 0;
    width:60%;
    z-index: 999;
}
.picker{
    display: flex;
    align-items: center;
    height: 50rpx;
}
.moreicon{
    width: 5%;
}
.nochoose{
    color: #cccccc;
    font-size: 32rpx;
}
.textcontainer{
    color: #333333;
    font-size: 32rpx;
    width: 95%;
}
.placeholder{
    color: #cccccc;
    font-size: 32rpx;
}
.btcontainer{
    width: 100%;
    margin-top: 150rpx;
}
button::after{
    border: none;
 }
.loginbt{
    width: 80%;
    height: 100rpx;
    border-radius: 10rpx;
    font-size: 35rpx;
    background-color: #ffd73b;
    color: #333333;
    text-align: center;
    line-height: 100rpx;
    border: none;
}
.sendbt{
    width: 290rpx;
    height:70rpx;
    border-radius: 10rpx;
    font-size: 30rpx;
    background-color: #ffd73b;
    color: #333333;
    text-align: center;
    border: none;
}
.bthover{
    background-color: #E5C136;
    
}
.btdisabled{
    width: 80%;
    height: 100rpx;
    border-radius: 10rpx;
    font-size: 35rpx;
    background-color: #efefef;
    color: #cccccc;
    text-align: center;
    line-height: 100rpx;
    border: none;
}

/* 版权声明 */
.copyright{
    width: 100%;
    text-align: center;
    position: absolute;
    padding-bottom: 50rpx;
    bottom: 0;
  }
  .copyright>view{
    color: #dbdbdb;
    font-size: 24rpx;
  }
  
  