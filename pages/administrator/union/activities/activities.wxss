/* pages/administrator/club_manage/activity_check/activity_check.wxss */
.picker{
    padding: 0 30rpx;
    margin: 5rpx auto;
    display: flex;
    align-items: center;
}
.picker image{
    width: 43rpx;
    height: 43rpx;
}
.picker text{
    /* margin-left: 30rpx; */
    font-size: 35rpx;
}
/* 活动总览内容 */
.container{
    padding-bottom: 128rpx;
}
.listitem{
    
    width: 85%;
    min-height: 90rpx;
    border-radius: 10rpx;
    margin: 25rpx auto;
    padding: 25rpx 25rpx;
    box-shadow:1px 1px 8px 1px rgba(159,188,217,0.18);
}
.titleContainer{
    display: flex;
    align-items: center;
}
.title{
    display: flex;
    align-items: center;
    width: 100%;
    flex-wrap: wrap ;
    word-break:break-all;
} 
.titleicons{
    width: 30rpx;
    height: 30rpx;
    margin-right: 15rpx;
}
.icons{
    width: 30rpx;
    height: 25rpx;
    margin-right: 15rpx;
}
.detail{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}
.detail>text{
    font-size: 30rpx;
    color: #cccccc;
}
.time{
    width: 30%;
}
.site{
    width: 40%;
    text-align: center;
}
.number{
    width: 15%;
    text-align: end;
}
/* 暂无数据 */
.nodataContainer{
    width: 100%;
    margin-top: 140rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.nodataContainer image{
    width: 85%;
}
.nodatatip{
    color: #cccccc;
    font-size: 34rpx;
    margin: 20rpx 0;
}