/* pages/set/set.wxss */
.item{
    width: 85%;
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 30rpx auto;
    box-shadow:1px 1px 5px 1px rgba(159,188,217,0.22);
    padding: 10rpx 20rpx;
    border-radius: 10rpx;
}
.item>image{
    width: 45rpx;
    height: 45rpx;
}
.title{
    font-size: 32rpx;
    color: #333333;
}
.btcontainer{
    width: 100%;
    position: absolute;
    bottom: 120rpx;
}
button::after{
    border: none;
 }
.bt{
    width: 80%;
    height: 100rpx;
    border-radius: 10rpx;
    font-size: 35rpx;
    background-color: #ffd73b;
    color: #333333;
    text-align: center;
    line-height: 100rpx;
    border: none;
}
.bthover{
    background-color: #E5C136;
    
}
